{{#each games}}
<div class="card card-body">
    <h4>{{this/title}}</h4>
    <p>{{price}}</p>
    <p>{{description}}</p>
    <a href="/game/gameentry/gameentryedit/{{id}}" class="btn btn-block btn-dark mb-2">Edit</a>
    <form action="/game/gamesdelete/{{id}}?_method=DELETE" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" class="btn btn-block btn-danger" value="Delete">
    </form>
    
</div>
{{else}}
<p>No Games Entries Found</p>
{{/each}}