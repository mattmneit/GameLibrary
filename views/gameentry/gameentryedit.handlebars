<h1>Edit Games</h1>

<div class="card car-body">
    <form action="/game/gameedit/{{games.id}}?_method=PUT" method="POST">
        <div class="form-group">
            <label for="title">Title of Game</label>
            <input type="hidden" name="_method" value="PUT">
            <input type="text" class="form-control" name="title" value="{{games.title}}" required>
        </div>
        <div class="form-group">
            <label for="price">Price of Game</label>
            <input type="text" class="form-control" name="price" value="{{games.price}}" required>
        </div>
        <div class="form-group">
            <label for="description">Description of Game</label>
            <textarea class="form-control" name="description" required>{{games.description}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>