{{#if success_msg}}
<div class="alert alert-success alert-dismissible">
    {{success_msg}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span area-hidden="true">&times;</span></button>
</div>
{{/if}}
{{#if error_msg}}
<div class="alert alert-danger alert-dismissible">
    {{danger_msg}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span area-hidden="true">&times;</span></button>
</div>
{{/if}}